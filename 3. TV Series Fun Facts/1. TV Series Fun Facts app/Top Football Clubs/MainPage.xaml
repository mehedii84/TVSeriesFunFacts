<phone:PhoneApplicationPage
    x:Class="Top_Football_Clubs.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
     xmlns:GoogleAds="clr-namespace:GoogleAds;assembly=GoogleAds"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait" Orientation="Portrait"
    shell:SystemTray.IsVisible="True">

   

    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot">
        
        <Grid.Background>
            <ImageBrush ImageSource="Assets/images/bgd1.jpg"/>
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>



        <StackPanel x:Name="TitlePanel" Grid.Row="0" Margin="12,17,0,6">
            <TextBlock Text="TV SERIES FUN FACTS" Style="{StaticResource PhoneTextNormalStyle}" Margin="12,0"/>
            
        </StackPanel>





        <Grid x:Name="ContentPanel" Grid.Row="1" Margin="12,0,12,0">
            
            <phone:Pivot Margin="0,0,0,80" >

                <phone:PivotItem Header="Game of Thrones" >
                    

                    <Grid>

                        <ScrollViewer >

                            <StackPanel >

                     



                                <Button
                
                x:Name="Chelsea"
                Height="110"
                Content="Emilia Clarke"
                FontSize="40"
                Background="#77000000"
                Click="Chelsea_Click"
                />

                        <Button
                
                x:Name="Manchester_City"
                Height="110"
                Content="Peter Dinklage"
                FontSize="40"
                Background="#77000000"
                Click="Manchester_City_Click"
                />

                        <Button
                
                x:Name="Arsenal"
                Height="110"
                Content="Kit Harington"
                FontSize="40"
                Background="#77000000"
                Click="Arsenal_Click"
                />

                        <Button
                
                x:Name="Manchester_United"
                Height="110"
                Content="Lena Headey"
                FontSize="40"
                Background="#77000000"
                Click="Manchester_United_Click"
                />

                        <Button
                
                x:Name="Liverpool_FC"
                Height="110"
                Content="Nikolaj Coster-Waldau"
                FontSize="37"
                Background="#77000000"
                Click="Liverpool_FC_Click"
                />

                    </StackPanel>

                        </ScrollViewer>

                    </Grid>

                </phone:PivotItem>








                <phone:PivotItem Header="Breaking Bad">


                    <Grid>

                        <ScrollViewer >

                            <StackPanel >

                                

                                <Button
                
                x:Name="FC_Barcelona"
                Height="110"
                Content="Bryan Cranston"
                FontSize="40"
                Background="#77000000"
                Click="FC_Barcelona_Click"
                />

                                <Button
                
                x:Name="Real_Madrid"
                Height="110"
                Content="Aaron Paul"
                FontSize="40"
                Background="#77000000"
               Click="Real_Madrid_Click"
                />

                                <Button
                
                x:Name="Athletico_Madrid"
                Height="110"
                Content="Anna Gunn"
                FontSize="40"
                Background="#77000000"
                Click="Athletico_Madrid_Click"
                />

                                <Button
                
                x:Name="Valencia"
                Height="110"
                Content="Bob Odenkirk"
                FontSize="40"
                Background="#77000000"
                Click="Valencia_Click"
                />

                                <Button
                
                x:Name="Sevilla"
                Height="110"
                Content="Jonathan Banks"
                FontSize="40"
                Background="#77000000"
                Click="Sevilla_Click"
                />

                            </StackPanel>

                        </ScrollViewer>

                    </Grid>



                </phone:PivotItem>




                <phone:PivotItem Header="FRIENDS">

                    <Grid>

                        <ScrollViewer >

                            <StackPanel >

                                



                                <Button
                
                x:Name="Bayern_Munich"
                Height="110"
                Content="Jennifer Anniston"
                FontSize="40"
                Background="#77000000"
                Click="Bayern_Munich_Click"
                />

                                <Button
                
                x:Name="Wolfsburg"
                Height="110"
                Content="Matthew Perry"
