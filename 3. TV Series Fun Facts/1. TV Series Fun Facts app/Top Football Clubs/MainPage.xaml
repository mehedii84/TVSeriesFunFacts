                            </StackPanel>

                        </ScrollViewer>

                    </Grid>


                </phone:PivotItem>



                <phone:PivotItem Header="Modern Family">

                    <Grid>

                        <ScrollViewer >

                            <StackPanel >

                                



                                <Button
                
                x:Name="PSG"
                Height="110"
                Content="Sofia Vergara"
                FontSize="40"
                Background="#77000000"
                Click="PSG_Click"
                />

                                <Button
                
                x:Name="Lyon"
                Height="110"
                Content="Julie Bowen"
                FontSize="40"
                Background="#77000000"
                Click="Lyon_Click"
                />

                                <Button
                
                x:Name="Monaco"
                Height="110"
                Content="Ty Burrell"
                FontSize="40"
                Background="#77000000"
